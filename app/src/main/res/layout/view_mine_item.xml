<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/px30"
    android:paddingTop="@dimen/px30">

    <ImageView
        android:layout_marginLeft="@dimen/px30"
        android:id="@+id/iv_left"
        android:layout_width="@dimen/px40"
        android:layout_height="@dimen/px40"
        android:layout_marginRight="@dimen/px30" />

    <com.qingpeng.mz.views.ZhunTextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_left"
        android:text="微信绑定"
        android:textColor="@color/c_363636"
        android:textSize="@dimen/px30" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text"
            android:textColor="@color/c_b0b0b0"
            android:textSize="@dimen/px30" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="@dimen/px12"
            android:layout_height="@dimen/px20"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px10"
            android:layout_marginRight="@dimen/px30"/>
    </LinearLayout>
</RelativeLayout>