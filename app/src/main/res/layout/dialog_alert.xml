<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/c_ffffff"
    android:paddingBottom="@dimen/px20"
    android:paddingTop="@dimen/px40">

    <TextView
        android:id="@+id/tv_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/px10"
        android:text="请认证核对信息\n确认后将无法进行修改"
        android:textColor="@color/c_000000"
        android:textSize="@dimen/px30" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px40"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cansle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px40"
            android:background="@drawable/bg_btn_small_cansle_radius"
            android:paddingBottom="@dimen/px10"
            android:paddingLeft="@dimen/px40"
            android:paddingRight="@dimen/px40"
            android:paddingTop="@dimen/px10"
            android:text="取消"
            android:textColor="@color/c_ffffff" />

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_login_out_btn"
            android:paddingBottom="@dimen/px10"
            android:paddingLeft="@dimen/px40"
            android:paddingRight="@dimen/px40"
            android:paddingTop="@dimen/px10"
            android:text="确认"
            android:textColor="@color/c_ffffff" />
    </LinearLayout>
</LinearLayout>