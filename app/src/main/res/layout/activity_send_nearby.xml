<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ffffff"
    android:orientation="vertical"
    tools:context=".activity.SendNearbyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_mine_bg"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px44" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80">

            <com.qingpeng.mz.views.ZhunTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px50"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/ffffff"
                android:textSize="@dimen/px35" />

            <com.qingpeng.mz.views.CuTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发布动态"
                android:textColor="@color/ffffff"
                android:textSize="@dimen/px35" />

        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px30"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/px300"
            android:background="@null"
            android:gravity="top"
            android:hint="这一刻的想法..." />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px30"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px80"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/px100"
                    android:layout_height="@dimen/px100"
                    android:src="@mipmap/ic_launcher" />

                <com.qingpeng.mz.views.ZhunTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px22"
                    android:text="直播"
                    android:textColor="@color/c_000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px80"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/px100"
                    android:layout_height="@dimen/px100"
                    android:src="@mipmap/ic_launcher" />

                <com.qingpeng.mz.views.ZhunTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px22"
                    android:text="上传"
                    android:textColor="@color/c_000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px80"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/px100"
                    android:layout_height="@dimen/px100"
                    android:src="@mipmap/ic_launcher" />

                <com.qingpeng.mz.views.ZhunTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px22"
                    android:text="话题"
                    android:textColor="@color/c_000000" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px100"
            android:layout_marginTop="@dimen/px100"
            android:layout_marginRight="@dimen/px100"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:text="发布"
            android:textColor="@color/c_ffffff" />
    </LinearLayout>

</LinearLayout>