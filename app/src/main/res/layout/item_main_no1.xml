<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/px240"
        android:layout_height="@dimen/px292">

        <ImageView
            android:layout_width="@dimen/px240"
            android:layout_height="@dimen/px292"
            android:background="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="@dimen/px10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/px20"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ic_mian_bofang" />

                <TextView
                    android:layout_marginLeft="@dimen/px10"
                    android:layout_marginRight="@dimen/px10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="276"
                    android:textColor="@color/c_ffffff" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/px20"
            android:layout_marginRight="@dimen/px20"
            android:layout_marginBottom="@dimen/px20"
            android:layout_alignParentBottom="true"
            android:background="@drawable/login_bg_bai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/px10"
                    android:textColor="@color/c_000000"
                    android:text="人气最高"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="@dimen/px10"
                    android:layout_marginBottom="@dimen/px10"
                    android:textColor="@color/c_000000"
                    android:text="NO.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>