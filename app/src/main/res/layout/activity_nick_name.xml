<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_f7f7ff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_f7f7ff"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px44" />

        <com.qingpeng.mz.views.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80"
            app:showToastLeftSrc="true"
            app:textLeftSrc="@mipmap/ic_back"
            app:textTitle="修改昵称"
            app:textTitleColor="@color/c_000000" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/px30"
        android:background="@color/c_ffffff"
        android:paddingTop="@dimen/px20"
        android:paddingBottom="@dimen/px20">

        <EditText
            android:id="@+id/ed_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入昵称"
            android:textColor="@color/c_000000" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px100"
        android:layout_marginTop="@dimen/px100"
        android:layout_marginRight="@dimen/px100"
        android:layout_marginBottom="@dimen/px50"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:text="关注"
        android:textColor="@color/c_ffffff" />
</LinearLayout>