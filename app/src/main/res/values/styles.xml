<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
                <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@mipmap/ic_yindao</item>
        <item name="android:windowNoTitle">true</item>
        <!--   <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="horizontal_slide" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AnimFade2</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnimFade2" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>
    </style>

    <declare-styleable name="MagicTextView">
        <attr name="innerShadowColor" format="color" />
        <attr name="innerShadowRadius" format="float" />
        <attr name="innerShadowDx" format="float" />
        <attr name="innerShadowDy" format="float" />
        <attr name="outerShadowColor" format="color" />
        <attr name="outerShadowRadius" format="float" />
        <attr name="outerShadowDx" format="float" />
        <attr name="outerShadowDy" format="float" />
        <attr name="typeface" format="string" />
        <attr name="foreground" format="reference|color" />
        <attr name="strokeWidth" format="float" />
        <attr name="strokeMiter" format="float" />
        <attr name="strokeColor" format="color" />
        <attr name="strokeJoinStyle">
            <enum name="miter" value="0" />
            <enum name="bevel" value="1" />
            <enum name="round" value="2" />
        </attr>
    </declare-styleable>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="login_edittext_underline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="login_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:numeric">integer</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="control_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>


    <style name="share_btn">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@drawable/share_type_text_selector</item>
        <item name="android:background">@drawable/share_type_bg_selector</item>
    </style>


    <style name="alivc_info_seekbar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:maxHeight">@dimen/alivc_info_seekbar_height</item>
        <item name="android:minHeight">@dimen/alivc_info_seekbar_height</item>
        <item name="android:paddingLeft">@dimen/alivc_info_seekbar_offset</item>
        <item name="android:paddingRight">@dimen/alivc_info_seekbar_offset</item>
        <item name="android:thumbOffset">@dimen/alivc_info_seekbar_offset</item>
    </style>

    <style name="alivc_info_seekbar_blue" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:thumb">@drawable/alivc_seekbar_thumb_blue</item>
    </style>

    <style name="alivc_info_seekbar_green" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_green</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_green</item>
        <item name="android:thumb">@drawable/alivc_info_seekbar_thumb_green</item>
    </style>

    <style name="alivc_info_seekbar_orange" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_orange</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_orange</item>
        <item name="android:thumb">@drawable/alivc_info_seekbar_thumb_orange</item>
    </style>

    <style name="alivc_info_seekbar_red" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_red</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_red</item>
        <item name="android:thumb">@drawable/alivc_info_seekbar_thumb_red</item>
    </style>

    <style name="alivc_info_seekbar_blue_voice" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:thumb">@drawable/alivc_dialog_seek_thumb</item>
    </style>

    <style name="alivc_info_seekbar_blue_light" parent="alivc_info_seekbar">
        <item name="android:progressDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:indeterminateDrawable">@drawable/alivc_info_seekbar_bg_blue</item>
        <item name="android:thumb">@drawable/alivc_dialog_seek_thumb</item>
    </style>
</resources>
