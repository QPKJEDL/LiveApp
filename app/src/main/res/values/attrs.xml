<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TitleBar">
        <attr name="textTitle" format="string" />
        <attr name="textTitleSrc" format="reference" />
        <attr name="showToastTitleSrc" format="boolean" />

        <attr name="textRight" format="string" />
        <attr name="textRightSrc" format="reference" />
        <attr name="showToastRightSrc" format="boolean" />

        <attr name="textLeft" format="string" />
        <attr name="textLeftSrc" format="reference" />
        <attr name="showToastLeftSrc" format="boolean" />

        <attr name="textTitleColor" format="color" />
        <attr name="textRightColor" format="color" />
        <attr name="textLeftColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MineItemView">
        <attr name="showToastLeftIcon" format="boolean" />
        <attr name="showToastRightIcon" format="boolean" />
        <attr name="itemText" format="string" />
        <attr name="itemRightText" format="string" />
        <attr name="leftIcon" format="reference" />
        <attr name="rightIcon" format="reference" />
    </declare-styleable>





    <declare-styleable name="SlidingTabLayout">
        <!-- indicator -->
        <attr name="tl_indicator_color" />
        <attr name="tl_indicator_height" />
        <attr name="tl_indicator_width" />
        <attr name="tl_indicator_margin_left" />
        <attr name="tl_indicator_margin_top" />
        <attr name="tl_indicator_margin_right" />
        <attr name="tl_indicator_margin_bottom" />
        <attr name="tl_indicator_corner_radius" />
        <attr name="tl_indicator_gravity" />
        <attr name="tl_indicator_style" />
        <attr name="tl_indicator_width_equal_title" />

        <!-- underline -->
        <attr name="tl_underline_color" />
        <attr name="tl_underline_height" />
        <attr name="tl_underline_gravity" />

        <!-- divider -->
        <attr name="tl_divider_color" />
        <attr name="tl_divider_width" />
        <attr name="tl_divider_padding" />

        <!-- tab -->
        <attr name="tl_tab_padding" />
        <attr name="tl_tab_space_equal" />
        <attr name="tl_tab_width" />

        <!-- title -->
        <attr name="tl_textsize" />
        <attr name="tl_textSelectColor" />
        <attr name="tl_textUnselectColor" />
        <attr name="tl_textBold" />
        <attr name="tl_textAllCaps" />

    </declare-styleable>
    <attr name="tl_text_select_size" format="dimension" />
    <attr name="tl_custom_layout" format="boolean" />
    <attr name="tl_custom_layout_id" format="reference" />
    <declare-styleable name="CustomTablayout">
        <attr name="tl_text_select_size" />
        <attr name="tl_custom_layout" />
        <attr name="tl_custom_layout_id" />
    </declare-styleable>
</resources>