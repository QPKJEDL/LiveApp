<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="246dp"
    android:background="#10c1c2c3"
    android:paddingBottom="8dp"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <ImageView
        android:id="@+id/room_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#10c1c2c3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/alivc_live_list_item_bg"
        android:layout_gravity="bottom" />

    <TextView
        android:id="@+id/room_name"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:text="@string/alivc_nickname"
        android:textColor="#ffffff"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/room_viwer_count"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/icon_viewer_count"
        android:drawablePadding="7.5dp"
        android:text="@string/alivc_nickname"
        android:textColor="#ffffff"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/room_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:textColor="#00ffff"
        android:textSize="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/streamer_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:textColor="#00ffff"
        android:textSize="12dp"
        android:visibility="gone" />

    <View
        android:id="@+id/click_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>